{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

{{ range .packages.homebrew.taps -}}
brew tap {{ . | quote }}
{{ end -}}

brew bundle --file=/dev/stdin <<EOF
{{ range .packages.homebrew.common -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.mas -}}
mas {{ . }}
{{ end -}}
EOF
{{ end -}}
